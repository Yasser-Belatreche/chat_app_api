{
  "name": "chat-app-api",
  "version": "1.0.0",
  "private": false,
  "description": "The api of a Chat app built with React Native",
  "author": "Yasser Belatreche",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "test:macro": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/__tests__/Domain/**/*.test.ts'",
    "test:contract": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/__tests__/Adapters/**/*.test.ts'",
    "test:acceptance": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/__tests__/UseCases/**/*.test.ts'",
    "test": "npm run test:acceptance && npm run test:macro && test:contract"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yasser-Belatreche/chat_app_api.git"
  },
  "keywords": [
    "api",
    "node",
    "server",
    "chat"
  ],
  "dependencies": {
    "chai-as-promised": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "google-libphonenumber": "^3.2.26",
    "pg": "^8.7.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "5.5.9",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@types/pg": "^8.6.4",
    "@types/sinon": "^10.0.8",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "faker": "5.5.3",
    "mocha": "^9.1.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
