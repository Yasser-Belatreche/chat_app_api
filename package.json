{
  "name": "chat-app-api",
  "version": "1.0.0",
  "private": false,
  "description": "The api of a Chat app built with React Native",
  "author": "Yasser Belatreche",
  "license": "MIT",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "test:macro": "mocha -r ts-node/register  'src/__tests__/Domain/**/*.test.ts'",
    "test:contract": "mocha -r ts-node/register 'src/__tests__/Adapters/**/*.test.ts'",
    "test:usersGateway": "mocha -r ts-node/register 'src/__tests__/Adapters/DrivenAdapters/Persistence/Users/Real/*.test.ts'",
    "test:acceptance": "mocha -r ts-node/register 'src/__tests__/UseCases/**/*.test.ts'",
    "test": "npm run test:macro && npm run test:contract && npm run test:acceptance"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yasser-Belatreche/chat_app_api.git"
  },
  "keywords": [
    "api",
    "node",
    "server",
    "chat"
  ],
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.2",
    "prisma": "^3.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "5.5.9",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.8",
    "@types/nodemailer": "^6.4.4",
    "@types/sinon": "^10.0.8",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "faker": "5.5.3",
    "mocha": "^9.1.3",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.15",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "prisma": {
    "schema": "src/Adapters/DrivenAdapters/Persistence/_SETUP_/Prisma/schema.prisma"
  }
